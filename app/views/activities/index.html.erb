<% @timeslots.each do |timeslot| -%>
  <div class="row" id="timeslot-<%= timeslot.id %>">
    <div class="col-sm-2">
      <h5 class="font-weight-bold"><%= timeslot.start_at.to_formatted_s(:time) %> - <%= timeslot.end_at.to_formatted_s(:time) %></h5>
    </div>
    <div class="col-sm-10">
      <% @rooms.each do |room| -%>
        <% activity = activity_for(room,timeslot) %>
        <% if activity -%>
          <div class="row">
            <div class="col-sm-2">
              <h6 class="font-weight-bold text-uppercase"><%= room.name %></h6>
            </div>
            <div class="col-sm-10">
                <%= render partial: 'activity_card',
                  locals: {
                    activity: activity,
                    room: room
                } %>
            </div>
          </div>
        <% end -%>
      <% end -%>
    </div>
  </div>
<% end -%>


